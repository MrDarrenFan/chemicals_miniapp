<!--pages/about/about.wxml-->

<view class="cu-bar search bg-white solid-bottom" style="position:fixed; top:0px; width:100%">
  <navigator class="search-form round" url="../search/search">
    <text class="cuIcon-search"></text>
    <input type="text" disabled="disabled" placeholder="查询化学品" confirm-type="search"></input>
  </navigator>
  <view class="action">
    <image bindtap="QRsearch" style="width:50rpx;height:50rpx" src="../../icons/二维码查询.png"></image>
  </view>
</view>

<view style="position:fixed; top:50px; width:100%; height:100%; z-index:-1">
  <view class="text-black text-left padding">
    {{aboutus}}
  </view>
  <view class="cu-bar" style="position: absolute; bottom: 200rpx; width: 100%; justify-content: center;">
    <view class="action">
      <button class="cu-btn bg-white shadow" bindtap="showModal" data-target="DialogModal">管理员入口</button>
    </view>
  </view>
</view>

<view class="cu-modal {{modalName=='DialogModal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content text-black">管理员登陆</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="cu-form-group margin-top">
      <view class="title">用户名</view>
      <input class="text-left" placeholder="请输入"></input>
    </view>
    <view class="cu-form-group margin-bottom">
      <view class="title">密码</view>
      <input class="text-left" placeholder="请输入"></input>
    </view>
    <view class="cu-bar bg-white justify-center">
      <view class="action">
        <button class="cu-btn line-black text-black" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-black margin-left" bindtap="hideModal">确定</button>

      </view>
    </view>
  </view>
</view>